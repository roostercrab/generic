<h1>Forgot your password?</h1>

<%= form_for :users, Routes.users_reset_password_path(@conn, :create), fn f -> %>
  <%= label f, :email %>
  <%= text_input f, :email, required: true %>

  <div>
    <%= submit "Send instructions to reset password" %>
  </div>
<% end %>

<p>
  <%= link "Register", to: Routes.users_registration_path(@conn, :new) %> |
  <%= link "Login", to: Routes.users_session_path(@conn, :new) %>
</p>
